<h2>Edit a Post</h2>

<form method="POST" action="/posts/<%= @post.id %>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <br>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @post.title %>">
    <br>
    <label>Body:</label>
    <textarea name="body"><%= @post.body %></textarea>
    <br>
    <input type="submit">
</form>